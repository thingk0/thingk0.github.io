---
import { SITE_TITLE, NAV_ITEMS } from "../consts";
import { Image } from "astro:assets";
import profileImage from "../assets/profile.png";
---

<aside class="sidebar">
  <div class="sidebar-content">
    <!-- Profile Section -->
    <div class="profile">
      <div class="avatar">
        <Image
          src={profileImage}
          alt="Profile"
          class="avatar-image"
          width={48}
          height={48}
        />
      </div>
      <div class="profile-info">
        <h1 class="name">{SITE_TITLE}</h1>
        <p class="bio">Backend Developer</p>
      </div>
    </div>

    <!-- Navigation -->
    <nav class="nav">
      <ul class="nav-list">
        {
          NAV_ITEMS.map((item) => (
            <li>
              <a href={item.href} class="nav-link">
                {item.text}
              </a>
            </li>
          ))
        }
      </ul>
    </nav>

    <!-- Social Links -->
    <div class="social">
      <a
        href="https://github.com/thingk0"
        target="_blank"
        class="social-link"
        aria-label="GitHub"
      >
        <svg viewBox="0 0 16 16" width="20" height="20" aria-hidden="true">
          <path
            fill="currentColor"
            d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
          ></path>
        </svg>
      </a>
      <a
        href="https://thingk0.pages.dev"
        target="_blank"
        class="social-link"
        aria-label="Portfolio"
      >
        <span class="icon">üåê</span>
      </a>
    </div>

    <!-- Footer -->
    <div class="footer">
      <p>¬© 2024 thingk0</p>
    </div>
  </div>
</aside>

<style>
  .sidebar {
    position: fixed;
    left: 0;
    top: 0;
    width: 280px;
    height: 100vh;
    background: #111111;
    color: #eeeeee;
    display: flex;
    flex-direction: column;
    z-index: 100;
    border-right: 1px solid rgba(255, 255, 255, 0.05);
  }

  .sidebar-content {
    display: flex;
    flex-direction: column;
    height: 100%;
    padding: 2.5rem 1.5rem;
  }

  /* Profile Section */
  .profile {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-bottom: 2.5rem;
    padding-left: 0.5rem;
  }

  .avatar {
    width: 48px;
    height: 48px;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden; /* Ensure image doesn't overflow */
    transition: transform 0.2s ease;
  }

  .avatar-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .avatar:hover {
    transform: scale(1.05);
  }

  .profile-info {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .name {
    font-size: 1.1rem;
    font-weight: 600;
    margin: 0;
    color: #ffffff;
    letter-spacing: -0.02em;
  }

  .bio {
    font-size: 0.85rem;
    color: #888888;
    margin: 0;
    font-weight: 400;
  }

  /* Navigation */
  .nav {
    flex: 1;
  }

  .nav-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .nav-list li {
    margin: 0;
    padding: 0;
  }

  .nav-link {
    display: block;
    padding: 0.6rem 1rem;
    color: #999999;
    text-decoration: none;
    border-radius: 8px;
    transition: all 0.2s ease;
    font-size: 0.95rem;
    font-weight: 500;
    line-height: 1.5; /* Ensure consistent height */
  }

  .nav-link:hover {
    background: rgba(255, 255, 255, 0.03);
    color: #ffffff;
    padding-left: 1.25rem; /* Subtle indent on hover instead of icon */
  }

  .nav-link[aria-current="page"],
  .nav-link.active {
    background: rgba(255, 255, 255, 0.06);
    color: #ffffff;
    font-weight: 600;
  }

  /* Social Section */
  .social {
    display: flex;
    gap: 0.75rem;
    padding: 1.5rem 0;
    margin-top: auto;
    border-top: 1px solid rgba(255, 255, 255, 0.05);
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    color: #888888;
    text-decoration: none;
    border-radius: 8px;
    background: rgba(255, 255, 255, 0.03);
    transition: all 0.2s ease;
  }

  .social-link:hover {
    background: rgba(255, 255, 255, 0.08);
    color: #ffffff;
  }

  /* Footer */
  .footer {
    padding-top: 1rem;
  }

  .footer p {
    font-size: 0.75rem;
    color: #444444;
    margin: 0;
  }

  /* Responsive Design */
  @media (max-width: 1024px) {
    .sidebar {
      width: 100%;
      height: auto;
      position: relative;
      background: #111111;
      border-right: none;
      border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    }

    .sidebar-content {
      flex-direction: row;
      align-items: center;
      padding: 1rem 1.5rem;
      gap: 1.5rem;
    }

    .profile {
      flex-direction: row;
      align-items: center;
      margin-bottom: 0;
      padding-left: 0;
      gap: 1rem;
    }

    .avatar {
      width: 40px;
      height: 40px;
      font-size: 1.25rem;
    }

    .profile-info {
      display: flex;
    }

    .nav {
      margin-left: auto;
      flex: 0 1 auto;
    }

    .nav-list {
      flex-direction: row;
      gap: 0.5rem;
    }

    .nav-link {
      padding: 0.5rem 1rem;
      border-radius: 8px;
    }

    .nav-link:hover {
      padding-left: 1rem; /* Reset hover indent on mobile */
      background: rgba(255, 255, 255, 0.05);
    }

    .social,
    .footer {
      display: none;
    }
  }
</style>
